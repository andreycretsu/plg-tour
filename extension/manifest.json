{
  "manifest_version": 3,
  "name": "TourLayer",
  "version": "2.1.0",
  "description": "Create interactive product tours on any website. Visual element picker & tour player.",
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    },
    "default_title": "TourLayer - Product Tours"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.cleaqops.com/*", "https://*.vercel.app/*", "http://localhost:3000/*"],
      "js": ["webapp-bridge.js"],
      "run_at": "document_end"
    }
  ],
  "externally_connectable": {
    "matches": ["https://www.cleaqops.com/*", "https://*.vercel.app/*", "http://localhost:3000/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["picker.js", "content.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
